<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context="com.samsung.android.sdk.accessory.example.helloaccessory.consumer.Login.LoginActivity"    android:background="#F2F9FA"    android:theme="@style/Theme.AppCompat.NoActionBar"    android:orientation="vertical">    <android.support.v7.widget.Toolbar        xmlns:android="http://schemas.android.com/apk/res/android"        xmlns:app="http://schemas.android.com/apk/res-auto"        android:layout_width="match_parent"        android:layout_height="wrap_content"        xmlns:tools="http://schemas.android.com/tools"        android:background="@color/colorWhite"        android:minHeight="?attr/actionBarSize"        app:theme="@style/AppTheme"        >        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="HeartCheck"            android:textColor="#000000"            android:layout_gravity="center"            android:id="@+id/toolbar_title"            android:textSize="20sp"            />        <com.dd.morphingbutton.impl.LinearProgressButton            android:id="@+id/btnMorph1"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textColor="@color/mb_white"            android:layout_gravity="right|center"/>    </android.support.v7.widget.Toolbar>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_gravity="center_horizontal"        android:layout_weight="1"        android:gravity="center"        android:orientation="vertical">        <TextView            android:id="@+id/heartrate"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:textSize="70dp"            android:text="우측 상단의 버튼을 눌러주세요"            android:textColor="#000000"            android:gravity="center"/>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_weight="1"        android:orientation="horizontal"        android:gravity="center_horizontal">        <Button            android:id="@+id/register"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:textSize="20dp"            android:onClick="mOnClick"            android:text="보호자 등록하기"            android:background="@drawable/shutterstock_422212270"/>    </LinearLayout></LinearLayout>